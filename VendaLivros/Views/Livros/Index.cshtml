@model IEnumerable<VendaLivros.Models.LivrosModel>

@{
    ViewData["Title"] = "Livros";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1>Livros disponíveis</h1>

        <div>
            <a class="btn btn-success mx-2" asp-controller="Livros" asp-action="Cadastrar">
                <i class="bi bi-file-earmark-plus mx-2"></i> Adicionar novo livro
            </a>
        </div>
    </div>

    @if (TempData["MensagemSucesso"] != null) {
        <div class="alert alert-success text-light" role="alert">
            @TempData["MensagemSucesso"]
        </div>
    }

    @if (TempData["MensagemErro"] != null) {
        <div class="alert alert-danger text-light" role="alert">
            @TempData["MensagemErro"]
        </div>
    }

    <table id="Livros" class="table table-light table-hover mt-5">
        <thead>
            <tr>
                <th scope="col">Título</th>
                <th scope="col">Autor</th>
                <th scope="col">Descrição</th>
                <th scope="col">Preço</th>
                <th scope="col">Estado de conservação</th>
                <th scope="col">Data da última atualização</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null) {
                @foreach (var livro in Model) {
                    <tr>
                        <td>@livro.Titulo</td>
                        <td>@livro.Autor</td>
                        <td>@livro.Descricao</td>
                        <td>@livro.Preco</td>
                        <td>@livro.EstadoConservacao</td>
                        <td>@livro.dataUltimaAtualizacao</td>
                        <td>
                            <div class="d-flex gap-2">
                                <a class="btn btn-warning d-flex align-items-center" asp-controller="Livros" asp-action="Editar" asp-route-id="@livro.Id">
                                    <i class="bi bi-pencil-square me-1"></i> Editar
                                </a>

                                <a class="btn btn-danger d-flex align-items-center" asp-controller="Livros" asp-action="Excluir" asp-route-id="@livro.Id">
                                    <i class="bi bi-trash3-fill me-1"></i> Excluir
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
